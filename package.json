{
  "name": "starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "ts-loader": "^5.2.1",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.2",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "scripts": {
    "watch:sass": "node-sass src/scss/main.scss dist/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    
    "compile:sass": "node-sass src/scss/main.scss dist/css/style.comp.css",
    "compress:css": "node-sass dist/css/style.comp.css dist/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass compress:css",
    "build": "webpack -dev --watch",
    "build:prod": "webpack --prod"
  },
